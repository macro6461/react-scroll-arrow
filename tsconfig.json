{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ES6",
    "target": "ES6",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}